datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  displayName  String
  role         String   @default("TRADER")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  accounts   Account[]
  watchlists Watchlist[]
}

model Account {
  id              String   @id @default(uuid())
  userId          String
  name            String
  baseCurrency    String
  startingBalance Decimal  @db.Decimal(18, 2)
  cashBalance     Decimal  @db.Decimal(18, 2)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}

enum InstrumentType {
  STOCK
  CRYPTO
  ETF
  INDEX
}

model Instrument {
  id                   String                @id @default(uuid())
  symbol               String                @unique
  name                 String
  instrumentType       InstrumentType
  currency             String
  createdAt            DateTime              @default(now())
  updatedAt            DateTime              @updatedAt
  watchlistInstruments WatchlistInstrument[]
}

model Watchlist {
  id        String   @id @default(uuid())
  userId    String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user  User                  @relation(fields: [userId], references: [id])
  items WatchlistInstrument[]
}

model WatchlistInstrument {
  id             String   @id @default(uuid())
  watchlistId    String
  instrumentId   String
  positionInList Int      @default(0)
  createdAt      DateTime @default(now())

  watchlist  Watchlist  @relation(fields: [watchlistId], references: [id])
  instrument Instrument @relation(fields: [instrumentId], references: [id])

  @@unique([watchlistId, instrumentId])
}
